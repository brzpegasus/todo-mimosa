doctype 5
html
  head
    title Mimosa Todo App
    link(rel='stylesheet', href='/stylesheets/style.css' + cachebust)
    
    // if IE
      script(src='/javascripts/ie.js')

    // Switch between optimized and non-optimized modes
    if optimize
      script(src='/javascripts/main-built.js')
    else
      script(src='/javascripts/vendor/require.js', data-main='/javascripts/main.js')

    // Do not remove this if you want to take advantage of live reload
    if reload
      script(src='/socket.io/socket.io.js')
      script(src='/socket-enable.js')

  body

    section#todoapp
      header#header
        h1 todos
        input#new-todo(placeholder='What needs to be done?', autofocus)
      section#main
        input#toggle-all(type='checkbox')
        label(for='toggle-all') Mark all as complete
        ul#todo-list
      footer#footer
    footer#info
      p Double-click to edit a todo
      p
        | Written by 
        a(href='http://addyosmani.github.com/todomvc/') Addy Osmani
      p
        | Part of 
        a(href='http://todomvc.com') TodoMVC
      p
        | Configured for 
        a(href='http://www.mimosajs.com') Mimosa
